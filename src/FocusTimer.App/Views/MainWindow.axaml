<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:FocusTimer.App.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="FocusTimer.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="FocusTimer - Skeleton"
        Width="400" Height="200"
        Background="Transparent"
        Opacity="0"
        Icon="avares://FocusTimer.App/Assets/FocusTimer-idle.png">

    <StackPanel Margin="20" Spacing="15" VerticalAlignment="Center">
        <TextBlock Text="FocusTimer ï¿½ Skeleton" 
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>
        
        <TextBlock Text="This is a placeholder window for Milestone 1."
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
        
        <Border BorderBrush="Gray" 
                BorderThickness="1" 
                Padding="10" 
                Margin="0,10,0,0">
            <StackPanel Spacing="5">
                <TextBlock Text="Loaded Settings:" FontWeight="SemiBold"/>
                <TextBlock>
                    <Run Text="Log Directory: "/>
                    <Run Text="{Binding LogDirectory}" FontStyle="Italic"/>
                </TextBlock>
            </StackPanel>
        </Border>
        
        <Button Content="Test Button (Does Nothing)" 
                HorizontalAlignment="Center"
                Padding="20,10"/>
    </StackPanel>

</Window>
